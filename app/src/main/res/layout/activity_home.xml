<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Logo centralizado com espaçamento do topo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_sebrae"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Primeira linha de botões -->
    <LinearLayout
        android:id="@+id/buttonRowTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/btnInventario"
            android:layout_width="96dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_inventario" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Inventário"
                android:textColor="#333"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnPatrimonio"
            android:layout_width="96dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_ativo_pat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Patrimônio"
                android:textColor="#333"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Segunda linha de botões -->
    <LinearLayout
        android:id="@+id/buttonRowBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/buttonRowTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/btnUsuario"
            android:layout_width="96dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_usuario" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Responsável"
                android:textColor="#333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLocal"
            android:layout_width="96dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_locais" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Local"
                android:textColor="#333"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Terceira linha de botões -->
    <LinearLayout
        android:id="@+id/buttonRowThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/buttonRowBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
