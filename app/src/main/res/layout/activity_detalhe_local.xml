<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FAFAFA"
android:gravity="center_horizontal"
android:padding="0dp">

<!-- Faixa azul superior -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#005eb8"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:elevation="4dp">

    <!-- Logo Sebrae -->
    <ImageView
        android:id="@+id/logoSEBRAE"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_sebrae_branco"
        android:contentDescription="Logo Sebrae"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhe do Local"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/logoSEBRAE"
        android:layout_marginStart="12dp" />
</RelativeLayout>

<!-- Conteúdo principal com ScrollView -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Imagem do Patrimônio -->
        <ImageView
            android:id="@+id/imgPatrimonio"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_locais"
            android:contentDescription="Imagem do patrimônio"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:clipToOutline="true" />

        <!-- Patrimônio -->
        <TextView
            android:id="@+id/txtPatrimonio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local Nome"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="#333333" />

        <!-- Código de Barra -->
        <TextView
            android:id="@+id/txtCodigoBarra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código Local:"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="#555555" />

        <!-- Descrição -->
        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código Filial:"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="#555555" />

        <!-- Linha com dois botões lado a lado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:weightSum="2"
            android:gravity="center">

            <!-- Botão 1: Editar -->
            <LinearLayout
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:background="@drawable/bg_button_edit">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/edit"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Editar\nLocal"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Botão 2: Excluir -->
            <LinearLayout
                android:id="@+id/btnTrash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:background="@drawable/bg_button_parar">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/lixo"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Excluir\nLocal"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
