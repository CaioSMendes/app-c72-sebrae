<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- ðŸ”µ BARRA DE TÃTULO -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#005eb8"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/logoSEBRAE"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sebrae_branco" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leitura de CÃ³digo de Barras"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/logoSEBRAE" />
    </RelativeLayout>

    <!-- ðŸ”µ INFORMAÃ‡Ã•ES DO USUÃRIO -->
    <TextView
        android:id="@+id/txtInfoTopoCodBarra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="InformaÃ§Ãµes"
        android:textStyle="bold"
        android:textColor="#005eb8"
        android:textSize="16sp"
        android:padding="12dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/txtInfoUserCodBarra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UsuÃ¡rio"
        android:textStyle="bold"
        android:textColor="#005eb8"
        android:textSize="16sp"
        android:padding="12dp"
        android:gravity="center" />

    <!-- ðŸ”µ BOTÃ•ES SUPERIORES (LER / LIMPAR) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp">

        <!-- âœ… LER CÃ“DIGOS -->
        <LinearLayout
            android:id="@+id/btnLerCodBarra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="#005eb8"
            android:paddingVertical="12dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ler_rfid"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/txtTituloBotaoCodBarra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ler CÃ³digo"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- âœ… LIMPAR -->
        <LinearLayout
            android:id="@+id/btnLimparCodBarra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="#4CAF50"
            android:paddingVertical="12dp"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_clean"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpar"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- ðŸ”µ CONTADOR -->
    <TextView
        android:id="@+id/tvCountCodBarra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CÃ³digos: 0"
        android:textSize="16sp"
        android:textColor="#333333"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <!-- ðŸ”µ LISTA DE CÃ“DIGOS LIDOS -->
    <ListView
        android:id="@+id/listViewCodBarra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp"
        android:background="@android:color/white" />

    <!-- ðŸ”µ BOTÃ•ES RESUMO & CONCLUIR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center">

        <!-- âœ… RESUMO -->
        <LinearLayout
            android:id="@+id/btnResumoCodBarra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="#005eb8"
            android:paddingVertical="12dp"
            android:layout_marginEnd="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_resumo"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumo"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- âœ… CONCLUIR -->
        <LinearLayout
            android:id="@+id/btnConcluirCodBarra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="#4CAF50"
            android:paddingVertical="12dp"
            android:layout_marginStart="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_concluir"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concluir"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
